<UserControl x:Class="MonopolyWPFApp.PlayerDataRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyWPFApp"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
      
    <local:PlayerData x:Name="Player1Data" Grid.Column="0" Visibility="Hidden"/>
    <local:PlayerData x:Name="Player2Data" Grid.Column="1" Visibility="Hidden"/>
    <local:PlayerData x:Name="Player3Data" Grid.Column="2" Visibility="Hidden"/>
    <local:PlayerData x:Name="Player4Data" Grid.Column="3" Visibility="Hidden"/>
  </Grid>
</UserControl>
